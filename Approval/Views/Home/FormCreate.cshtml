<head>  
    <link rel="stylesheet" href="~/css/FormStyle.css" asp-append-version="true" />
        <title>Procurements</title>    
    <div>
        <button type="button" class="btnSave">Save</button>
        <a asp-controller="Home" asp-action="AllOrders"><button type="button" class="btnCancel">Cancel</button></a>
        
    </div>
</head>

<body>
<div class="input2">
        <form>
            <div class="block">
                <legend>BASIC PROCUREMENT DATA</legend>
            </div>

            <div>
                <label>Title  <input class=input2 type="text" name="title"></label>
                <label>Category  <input class=input2 type="text" name="category"></label>
            </div>

            <div>
                <br>
                <label>Goal of procurement  <input class=input2 type="text" name="goal"></label>
                <label>Unit price<input class=input2 type="text" name="unitPrice"></label>
            </div>

            <div>
                <br>
                <label>Place of delivery  <input class=input2 type="text" name="placeDelivery"></label>
                <label>Amount<input class=input2 type="text" name="amount"></label>
            </div>

            <div>
                <br>
                <label>Attechment  <input class=input2 type="text" name="attachment"></label>
                <label>Price<input class=input2 type="text" name="price"></label>
            </div>

            <div>
                <br>
                <label>Desire date  <input class=input2 type="text" name="desireDate"></label>
                <label>Purchasing Notes<input class=input2 type="text" name="purchasingNotes"></label>
            </div>


            <div class="block">
                <legend>RELEASE OF PROCUREMENT REQUEST</legend>
            </div>

            <div>
                <label>Created by  <input class=input2 type="text" name="createdBy"></label>
                <label>Head of Department<input class=input2 type="text" name="headOfDepartment"></label>
            </div>

            <div>
                <br>
                <label>General manager  <input class=input2 type="text" name="generalManager"></label>
                <label>Head of IT<input class=input2 type="text" name="headOfIT"></label>
            </div>

            <div class="block">
                <legend>PURCHASE</legend>
            </div>
            <div>
                <label>Number from ERP  <input class=input2 type="text" name="nummberFromERP"></label>                
            </div>

        </form>
</div>
</body>
 
