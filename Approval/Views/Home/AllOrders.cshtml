<link rel="stylesheet" href="~/css/FormStyle.css" />
@model PageData 

@if(User.Identity.IsAuthenticated)
{
    if(User.IsInRole("Admin"))
    {
        <div class="search">
            <input />
            <a asp-controller="Home" asp-action="FormCreate"><button type="button" class="btnUniversalAllOrders">Create</button></a>

            @*<button type="button" class="btnUniversalAllOrders" action="Hide_Click">All Requests</button>*@
        </div>

        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Created by</th>
                        <th>Category</th>
                        <th>Number from ERP</th>
                        <th>Change</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.ListOrders)
                    {
                        <tr>
                            <td>@row.ID</td>
                            <td><a asp-action="Preview" asp-controller="Home" asp-route-idRequest="@row.ID">@row.Title</a></td>
                            <td>@string.Format("${0:N2}", row.Price)</td>
                            <td>@row.Status</td>
                            <td>@row.Created</td>
                            <td>@row.CreatedBy</td>
                            <td>@row.Category</td>
                            <td>@row.NumberFromERP</td>
                            <td><a asp-action="Edit" asp-controller="Home" asp-route-idRequest="@row.ID">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                <a asp-area="" asp-controller="Home" asp-action="AllOrders">Requests that you have created / approved</a>
            </div>
        </footer>
    }
}
 