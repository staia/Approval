@model ListOrder

<link rel="stylesheet" href="~/css/FormStyle.css"/>
 

<div class="form-stylePreview">
    <form method="post" asp-controller="Home" asp-action="Preview"> 
    <div class="blockPreview">
        <legend>BASIC PROCUREMENT DATA</legend>
       
    </div>
    <div class="table-devide-22">
        <div class="cells-style">
            <label asp-for="Title" class=labelPreview> </label> 
            <input readonly asp-for="Title" class="inputPreview">
        </div>
        <div class="cells-style">
            <label asp-for="Category" class=labelPreview></label>
            <input readonly asp-for="Category" class=inputPreview>
        </div>
        <div class="cells-style">
            <label asp-for="GoalOfProcurement" class=labelPreview>Goal Of Procurement</label>
            <input readonly asp-for="GoalOfProcurement" class=inputPreview>
        </div>
        <div class="cells-style">
            <label asp-for="UnitPrice" class=labelPreview>Unit Price</label>
            <input readonly asp-for="UnitPrice" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="PlaceOfDelivery" class=labelPreview>Place Of Delivery</label>
            <input readonly asp-for="PlaceOfDelivery" class=inputPreview>
        </div>
        <div class="cells-style">
            <label asp-for="Amount" labelPreview></label>
            <input readonly asp-for="Amount" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="Attachment" labelPreview></label>
            <input readonly asp-for="Attachment" class=inputPreview>
        </div>
        <div class="cells-style">
            <label asp-for="Price" labelPreview></label>
            <input readonly asp-for="Price" class=inputPreview>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="cells-style">
            <label asp-for="DesireDate" labelPreview>Desire Date</label>
            <input readonly asp-for="DesireDate" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="PurchasingNotes" labelPreview>Purchasing Notes</label>
            <input readonly asp-for="PurchasingNotes" class=inputPreview>
        </div>
    </div>

    <div class="blockPreview">
        <legend>RELEASE OF PROCUREMENT REQUEST</legend>
    </div>
    <div class="table-devide-22">

        <div class="cells-style">
            <label asp-for="CreatedBy" labelPreview>Created by</label>
            <input readonly asp-for="CreatedBy" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="HeadOfDepartment" labelPreview>Head Of Department</label>
            <input readonly asp-for="HeadOfDepartment" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="GeneralManager" labelPreview>General Manager</label>
            <input readonly asp-for="GeneralManager" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="HeadOfIT" labelPreview>Head Of IT</label>
            <input readonly asp-for="HeadOfIT" class=inputPreview>
        </div>

        <div class="cells-style">
            <label asp-for="WarehouseManager" labelPreview>Warehouse Manager</label>
            <input readonly asp-for="WarehouseManager" class=inputPreview>
        </div>
    </div>
    <br />
    <div class="blockPreview">
        <legend>PURCHASE</legend>
    </div>
    <div class="table-devide-22">
        <div class="cells-style">
            <label asp-for="NumberFromERP" labelPreview>Number From ERP</label>
            <input readonly asp-for="NumberFromERP" class=inputPreview>
            </div><br />            
    </div>  
    </form>    
     
</div>

